            const setName = prompt("–í—ä–≤–µ–¥–µ—Ç–µ –∏–º–µ –Ω–∞ –∫–æ–º–ø–ª–µ–∫—Ç–∞:");
            if (!setName) return;

            alert(`–î–æ–±–∞–≤–∏ –∫–æ–º–ø–ª–µ–∫—Ç '${setName}' –∫—ä–º –æ–ø—Ü–∏—è ${selectedOptionIdx}`);
