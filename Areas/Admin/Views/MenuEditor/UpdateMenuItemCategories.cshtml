                                                    </li>
                                                }
                                                else if (child.Type == "SubGroupSet" && child.SubGroupSetItems != null)
                                                {
                                                    <details>
                                                        <summary><strong>üìÇ @child.DisplayName</strong></summary>
                                                        <ul class="set-list">
                                                            @for (int k = 0; k < child.SubGroupSetItems.Count; k++)
                                                            {
                                                                var setItem = child.SubGroupSetItems[k];

